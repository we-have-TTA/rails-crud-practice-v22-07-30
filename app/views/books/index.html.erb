<%= link_to '新增書本', new_book_path %>

<table class="table text-center">
  <thead class="header">
    <tr>
      <th>書名</th>
      <th>價格</th>
      <th>內容</th>
      <th>修改</th>
      <th>刪除</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= link_to book.title, book %></td>
      <td><%= book.price %></td>
      <td><%= book.content %></td>
      <td>
        <%=
          link_to '修改',
          edit_book_path(book),
          class: 'btn btn-outline-secondary'
        %>
      </td>
      <td>
        <%=
          link_to '刪除',
          book_path(book),
          method: 'delete',
          data: { confirm: '確認刪除' },
          class: 'btn btn-outline-danger'
        %>
      </td>
    </tr>
  </tbody>
  <% end %>
</table>
