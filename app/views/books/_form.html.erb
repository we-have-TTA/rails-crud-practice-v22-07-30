<%= form_for book do |f| %>
  書名
  <%= f.text_field :title, class: 'form-control my-3' %>
  內容
  <%= f.text_area :content, class: 'form-control my-3' %>
  價格
  <%= f.number_field :price, class: 'form-control my-3' %>
  <%= f.submit class: 'form-control' %>
<% end %>

<style>
  .field_with_errors input{ outline: 1px solid red; }
</style>
